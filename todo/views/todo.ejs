<!DOCTYPE html>
<html>

<head>
    <title>To-Do App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(to bottom right, #cce0ff, #8a2eff);
            background-size: 100% 740px;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            gap: 20px;
            padding: 20px;
        }

        .left-pane {
            flex: 1;
            border: 1px solid black;
            padding: 10px 20px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .right-pane {
            flex: 1;
            border: 1px solid black;
            padding: 10px 20px;
            height: fit-content;
        }

        #task-list {
            padding: 5px;
            width: 98%;
        }

        .listItem {
            margin-bottom: 15px;
            width: 100%;
            position: relative;
            height: 3rem;
        }

        .listItem input[type="checkbox"] {
            margin-right: 10px;
            margin-left: 10px;
            position: absolute;
            right: 8%;
        }

        form {
            margin-bottom: 2rem;
        }

        .delete-button {
            cursor: pointer;
            font-size: 15px;
            margin-left: 10px;
            position: absolute;
            right: 15px;
        }
        .inputimage{
            margin-left: 10px;
            margin-right: 4rem;
            position: absolute;
            right: 15px;
        }
        nav {
            border-bottom: 1px solid black;
        }

        #showusername {
            display: flex;
            justify-content: flex-end;
            width: fit-content;
            margin-right: 4rem;
        }

        #add-task-button {
            margin-top: 1rem;
        }

        #input-img {
            margin-top: 1rem;
            width: 35rem;
        }
        .inputimage{
            height: 50px;
            width: 50px;
        }
    </style>
</head>

<body>
    <%- include('header') %>

        <div class="container">
            <div class="left-pane" id="left-pane">
                <h2>Task List</h2>
                <div id="task-list">
                    <!-- Tasks will be populated here using JavaScript -->
                    <!-- <div class="listItem">
                        <div style="display: contents;">static</div>
                        <span>
                            <img class="inputimage" src="D:\note.jpg">
                            <input type="checkbox" class="check-button">
                            <button class="delete-button">x</button>
                        </span>
                    </div> -->
                </div>
            </div>
            <div class="right-pane">
                <h2>Add New Task</h2>
                <form id="task-form" method="POST" action="/todo" enctype="multipart/form-data">
                    <label for="add-task"> Task: </label>
                    <input id="input-task" type="text" name="task">
                    <input id="input-img" type="file" name="image">
                    <button id="add-task-button" type="submit">Add Task</button>
                </form>
            </div>
        </div>

        <script src="./todoScript.js" type="text/JavaScript"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>